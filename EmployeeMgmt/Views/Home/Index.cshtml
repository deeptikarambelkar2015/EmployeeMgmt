@model List<Employee>;


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<!--Grid for listing Employees-->
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            var detailsURL = "/home/details/" + employee.Id.ToString();
            var editURL = "/home/edit/" + employee.Id.ToString();
            var deleteURL = "/home/delete/" + employee.Id.ToString();
            <tr>
                <th scope="row">@employee.Id</th>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>
                    <a href='@detailsURL' title='Detail'> DETAILS </a> | 
                    <a href='@editURL'  title='Edit'> EDIT </a> | 
                    <a href='@deleteURL'  title='Delete'> DELETE </a>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal">
    <div class="modal-dialog">
        <div class="modal-content">
           <div id="myModalContent"></div>
        </div>
    </div>
</div>


